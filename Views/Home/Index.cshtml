@{
    ViewData["Title"] = "Home Page";
}

<div class="py-5 text-center bg-light rounded-3 ">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3" style="line-height:1.1;">Discover movies with Movie App</h1>
        <p class="lead mb-4 text-secondary style="font-weight: 400; line-height:1.5;">Manage your favorite movies quickly and easily</p>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-dark btn-lg px-5 py-2 ">
            Start 
        </a>
    </div>
</div>
<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-4 text-center card p-4 rounded-4 block-hover">
            <i class="fas fa-smile-beam animated-icon fs-1 text-danger mb-3"></i>
            <h3 class="mb-3 fw-semibold">Explore</h3>
            <p class="text-muted">View and search sort movies from the database</p>
        </div>
        <div class="col-md-4 text-center card p-4 rounded-4 block-hover">
            <i class="fas fa-check-circle animated-icon fs-1 text-dark mb-3"></i>
            <h3 class="mb-3 fw-semibold">Manage</h3>
            <p class="text-muted">Edit existing details or delete outdated records</p>
        </div>
        <div class="col-md-4 text-center card p-4 rounded-4 block-hover">
            <i class="fas fa-plus-circle animated-icon fs-1 text-warning mb-3"></i>
            <h3 class="mb-3 fw-semibold">Add</h3>
            <p class="text-muted ">Add new movies to your collection easily</p>
        </div>
    </div>
</div>